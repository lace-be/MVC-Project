                <input asp-for="OpmerkingAfgewezen" class="form-control" />
                <span asp-validation-for="OpmerkingAfgewezen" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAfgewerkt" /> @Html.DisplayNameFor(model => model.IsAfgewerkt)
                </label>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

