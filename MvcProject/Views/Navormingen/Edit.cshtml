@model MvcProject.ViewModels.NavormingEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Navorming</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NavormingId" />
            <div class="form-group">
                <label asp-for="GebruikerId" class="control-label"></label>
                <select asp-for="GebruikerId" class="form-control" asp-items="ViewBag.GebruikerId"></select>
                <span asp-validation-for="GebruikerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartUur" class="control-label"></label>
                <input asp-for="StartUur" class="form-control" />
                <span asp-validation-for="StartUur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EindUur" class="control-label"></label>
                <input asp-for="EindUur" class="form-control" />
                <span asp-validation-for="EindUur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reden" class="control-label"></label>
                <input asp-for="Reden" class="form-control" />
                <span asp-validation-for="Reden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kostprijs" class="control-label"></label>
                <input asp-for="Kostprijs" class="form-control" />
                <span asp-validation-for="Kostprijs" class="text-danger"></span>
            </div>


            @if (User.IsInRole("Directie"))
            {
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="IsGoedgekeurdDir" class="form-check-input" type="radio" id="isGoedgekeurdDir" name="approvalStatus" value="IsGoedgekeurdDir">
                        <label asp-for="IsGoedgekeurdDir" class="form-check-label" for="isGoedgekeurdDir">
                            Goedkeuren
                        </label>
                    </div>
                    <div class="form-check">
                        <input asp-for="IsAfgewezen" class="form-check-input" type="radio" id="isAfgewezen" name="approvalStatus" value="IsAfgewezen">
                        <label asp-for="IsAfgewezen" class="form-check-label" for="isAfgewezen">
                            Afwijzen
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="OpmerkingAfgewezen" class="control-label"></label>
                    <input asp-for="OpmerkingAfgewezen" class="form-control" />
                    <span asp-validation-for="OpmerkingAfgewezen" class="text-danger"></span>
                </div>
            }
            @if (User.IsInRole("Directie") || User.IsInRole("Coördinator"))
            {
                <div class="form-group form-check">
                    <label asp-for="IsAfgewerkt" class="form-check-label">
                        Afgewerkt
                        <input class="form-check-input" asp-for="IsAfgewerkt" />
                    </label>
                </div>
            }


           @* <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsGoedgekeurdDir" /> @Html.DisplayNameFor(model => model.IsGoedgekeurdDir)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAfgewezen" /> @Html.DisplayNameFor(model => model.IsAfgewezen)
                </label>
            </div>
            <div class="form-group">
