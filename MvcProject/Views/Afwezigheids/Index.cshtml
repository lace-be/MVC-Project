@model IEnumerable<MvcProject.Models.Afwezigheid>

@{
    ViewData["Title"] = "Index";
}

<h1>Afwezigheid</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EindDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gebruiker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EindDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gebruiker.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AfwezigheidId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AfwezigheidId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AfwezigheidId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
